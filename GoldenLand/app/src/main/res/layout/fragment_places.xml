<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.svbtle.johnmajor.goldenland.PlacesFragment">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card1"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="5dp"
            android:padding="4dp">

                <ImageView
                    android:layout_gravity="start"
                    style="@style/cardimg"
                    android:id="@+id/image1"
                    android:src="@drawable/sdg2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    tools:ignore="ContentDescription"
                    android:padding="5dp"/>
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/title_text1"
                    android:layout_gravity="left|top"
                    android:textColor="#ef1644" />


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card2"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="5dp"
            android:padding="4dp">

            <ImageView

                style="@style/cardimg"
                android:id="@+id/image2"
                android:src="@drawable/mdy2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                tools:ignore="ContentDescription"
                android:padding="5dp"/>

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/title_text2"
                android:layout_gravity="left|top"
                android:textColor="#ef1644" />


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card3"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="5dp"
            android:padding="4dp">

            <ImageView

                style="@style/cardimg"
                android:id="@+id/image3"
                android:src="@drawable/and3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                tools:ignore="ContentDescription"
                android:padding="5dp"/>

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/title_text3"
                android:layout_gravity="left|top"
                android:textColor="#ef1644" />


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card4"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="5dp"
            android:padding="4dp">

            <ImageView

                style="@style/cardimg"
                android:id="@+id/image4"
                android:src="@drawable/inle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                tools:ignore="ContentDescription"
                android:padding="5dp"/>

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/title_text4"
                android:layout_gravity="left|top"
                android:textColor="#ef1644" />


        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
